<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>EcoBeauty | Tienda de Cosmética Natural</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css" rel="stylesheet" />

  <style>
    body {
      background-color: #f5faf6;
      color: #3e4d3b;
      font-family: 'Poppins', sans-serif;
    }

    /* Banner */
    header {
      position: relative;
      width: 100%;
      height: 280px;
      overflow: hidden;
    }

    header img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: brightness(0.8);
    }

    header .overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      color: #ffffff;
      background: rgba(61, 87, 31, 0.25);
      text-align: center;
    }

    header .overlay h1 {
      font-size: 2.8rem;
      font-weight: 700;
      letter-spacing: 1px;
    }

    header .overlay p {
      font-size: 1.2rem;
      font-weight: 400;
      margin-top: .5rem;
    }

    /* Botones personalizados */
    .btn-eco {
      background-color: #88b88b;
      border: none;
      color: white;
      transition: background-color 0.3s ease, transform 0.2s ease;
      font-weight: 500;
      border-radius: 12px;
    }

    .btn-eco:hover {
      background-color: #6fae71;
      transform: translateY(-2px);
    }

    .btn-outline-eco {
      border: 2px solid #88b88b;
      color: #88b88b;
      background-color: transparent;
      border-radius: 12px;
      font-weight: 500;
      transition: all 0.3s ease;
    }

    .btn-outline-eco:hover {
      background-color: #88b88b;
      color: white;
    }

    .thumb {
      height: 70px;
      object-fit: cover;
      border-radius: .35rem;
    }

    .thumbs-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: .5rem;
    }

    /*  Footer */
    footer {
      background: linear-gradient(180deg, #a4c4a5 0%, #d5e7d6 100%);
      color: #2f3c2e;
      padding: 2rem 0;
      margin-top: 4rem;
    }

    footer a {
      color: #2f3c2e;
      text-decoration: none;
      font-weight: 500;
      transition: color 0.3s ease;
    }

    footer a:hover {
      color: #1f261c;
      text-decoration: underline;
    }
  </style>
</head>

<body>

  <!--  Banner -->
  <header>
    <img src="ChatGPT Image 31 oct 2025, 13_17_23.png" alt="Banner EcoBeauty">
    <div class="overlay">
      <h1>EcoBeauty</h1>
      <p>Cosmética natural y artesanal</p>
    </div>
  </header>

  <div class="container py-5">
    <div class="text-center mb-4">
      <h2 class="fw-bold text-success">Nuestros Productos</h2>
      <p class="lead text-muted mb-4">Agrega, organiza y gestiona fácilmente tus productos naturales</p>
      <button type="button" class="btn btn-eco btn-lg" data-bs-toggle="modal" data-bs-target="#productoModal">
        Agregar Nuevo Producto
      </button>
      <button id="clearAll" class="btn btn-outline-eco btn-lg ms-2">
        Limpiar todo (LocalStorage)
      </button>
    </div>

    <!-- Contenedor para los productos -->
    <div id="productsContainer" class="row mt-4"></div>
  </div>

  <!-- Modal para registro de producto -->
  <div class="modal fade" id="productoModal" tabindex="-1" aria-labelledby="productoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header" style="background-color:#88b88b; color:white;">
          <h5 class="modal-title" id="productoModalLabel">Agregar Nuevo Producto</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body p-4">
          <form id="productoForm">
            <div class="row g-3">
              <div class="col-md-6">
                <label for="clave" class="form-label">Clave *</label>
                <input type="text" class="form-control" id="clave" required />
              </div>
              <div class="col-md-6">
                <label for="nombre" class="form-label">Nombre *</label>
                <input type="text" class="form-control" id="nombre" required />
              </div>
              <div class="col-md-6">
                <label for="precio" class="form-label">Precio *</label>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <input type="number" class="form-control" id="precio" step="0.01" required />
                </div>
              </div>
              <div class="col-md-6">
                <label for="stock" class="form-label">Stock *</label>
                <input type="number" class="form-control" id="stock" required />
              </div>
              <div class="col-12">
                <label for="descripcion" class="form-label">Descripción</label>
                <textarea class="form-control" id="descripcion" rows="3"></textarea>
              </div>
              <div class="col-12">
                <label for="imagenes" class="form-label">Imágenes del producto (máx. 3)</label>
                <input type="file" id="imagenes" class="form-control" accept="image/*" multiple />
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-outline-eco" data-bs-dismiss="modal">Cancelar</button>
              <button type="submit" class="btn btn-eco">Guardar Producto</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!--  Footer -->
  <footer class="text-center">
    <div class="container">
      <p class="mb-2"> <strong>EcoBeauty</strong> — Belleza natural, ética y sostenible</p>
      <p class="mb-0">
        <a href="#">Política de privacidad</a> ·
        <a href="#">Términos de uso</a> ·
        <a href="#">Contacto</a>
      </p>
      <p class="mt-3 small">&copy; 2025 EcoBeauty. Todos los derechos reservados.</p>
    </div>
  </footer>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
  <script>
    let productos = [];
    const LS_KEY = 'productosEcoBeauty';
    const modal = new bootstrap.Modal(document.getElementById('productoModal'));

    function saveToLS() {
      localStorage.setItem(LS_KEY, JSON.stringify(productos));
    }

    function loadFromLS() {
      const raw = localStorage.getItem(LS_KEY);
      productos = raw ? JSON.parse(raw) : [];
    }

    function readFilesAsDataURLs(fileList) {
      const files = Array.from(fileList || []).slice(0, 3);
      return Promise.all(files.map(file =>
        new Promise((resolve, reject) => {
          const fr = new FileReader();
          fr.onload = () => resolve({ name: file.name, type: file.type, dataURL: fr.result });
          fr.onerror = reject;
          fr.readAsDataURL(file);
        })
      ));
    }

    function renderProducts() {
      const container = document.getElementById('productsContainer');
      container.innerHTML = '';

      productos.forEach((producto, idx) => {
        const col = document.createElement('div');
        col.className = 'col-md-6 col-lg-4 mb-4';
        const thumbs = (producto.imagenes || [])
          .map(img => `<img class="thumb w-100" src="${img.dataURL}" alt="${producto.nombre}" />`)
          .join('');
        col.innerHTML = `
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
              <h5 class="card-title text-success">${producto.nombre}</h5>
              <p><strong>Clave:</strong> ${producto.clave}</p>
              <p><strong>Precio:</strong> $${Number(producto.precio).toFixed(2)}</p>
              <p><strong>Stock:</strong> ${producto.stock}</p>
              <p class="small text-muted">${producto.descripcion || ''}</p>
              <div class="thumbs-grid">${thumbs}</div>
            </div>
            <div class="card-footer bg-transparent border-0 text-end">
              <button class="btn btn-outline-eco btn-sm" data-index="${idx}"><i class="bi bi-trash"></i> Eliminar</button>
            </div>
          </div>`;
        container.appendChild(col);
      });

      container.querySelectorAll('button[data-index]').forEach(btn => {
        btn.addEventListener('click', e => {
          const i = Number(e.currentTarget.getAttribute('data-index'));
          productos.splice(i, 1);
          saveToLS();
          renderProducts();
        });
      });
    }

    document.getElementById('productoForm').addEventListener('submit', async function (e) {
      e.preventDefault();
      const imagenesInput = document.getElementById('imagenes');
      let imagenes = await readFilesAsDataURLs(imagenesInput.files);

      const producto = {
        id: crypto.randomUUID(),
        clave: document.getElementById('clave').value.trim(),
        nombre: document.getElementById('nombre').value.trim(),
        precio: parseFloat(document.getElementById('precio').value),
        stock: parseInt(document.getElementById('stock').value),
        descripcion: document.getElementById('descripcion').value.trim(),
        imagenes
      };

      productos.push(producto);
      saveToLS();
      renderProducts();
      this.reset();
      modal.hide();
    });

    document.addEventListener('DOMContentLoaded', () => {
      loadFromLS();
      renderProducts();
      document.getElementById('clearAll').addEventListener('click', () => {
        if (confirm('¿Deseas eliminar todos los productos guardados?')) {
          productos = [];
          saveToLS();
          renderProducts();
        }
      });
    });
  </script>
</body>
</html>

